#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	FirstScreen:
	CountryOption:

<FirstScreen>:
	name:'first_screen'

	BoxLayout:
		orientation:'vertical'
		Label:
			font_size:40
			text:"Verify your number\nYou'll get a code via SMS. Carrier rates may apply."
		TextInput:
			id:country_info
			on_focus:app.root.current='country_option'
			
		TextInput:
			id:phone_no

<CountryOption>:
	name:"country_option"
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			Button:
				font_size:20
				text:'<--'
				on_release:app.root.current='first_screen'
			Label:
				text:"Choose your country"
		ListView:
			Label:
				markup:True
				text:'[b]Country_name[/b]  (Country_code)'